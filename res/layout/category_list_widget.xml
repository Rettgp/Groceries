<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePage" >
    
	<TextView 
	    android:id="@+id/categoryParent"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/categorylistborder"
	    android:gravity="center"
	    android:text="Grocery List 1"
	    android:textColor="#FFFFFF"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:minHeight="15dp"
	    android:textStyle="bold"
	    android:textSize="30sp" />

	<Button
	    android:id="@+id/buttonAddCategory"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/categoryParent"
	    android:layout_alignRight="@+id/categoryParent"
	    android:background="@drawable/circle"
	    android:focusable="false"
	    android:minHeight="30dp"
	    android:minWidth="50dp"
	    android:onClick="onCategoryItemAddClicked"
	    android:text="+"
	    android:textColor="#FFFFFF"
	    android:textSize="40dp"
	    android:textStyle="bold" />

	<Button
	    android:id="@+id/buttonRemoveCategory"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/categoryParent"
	    android:layout_alignLeft="@+id/categoryParent"
	    android:layout_alignTop="@+id/buttonAddCategory"
	    android:layout_marginLeft="18dp"
	    android:minHeight="20dp"
	    android:minWidth="45dp"
	    android:onClick="onCategoryItemDeleteClicked"
	    android:text="X"
	    android:textColor="#000000"
	    android:textSize="20dp"
	    android:textStyle="bold" />
	
</RelativeLayout>

